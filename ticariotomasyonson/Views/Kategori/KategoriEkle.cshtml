@model  ticariotomasyonson.Models.Siniflar.Kategori
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Yeni Kategori Sayfası</h2>
<br />
<script src="~/Scripts/jquery-3.4.1.js"></script>
<form class="form-group" method="post">
    @Html.LabelFor(x=>x.KtegoriAd)
    @Html.TextBoxFor(x => x.KtegoriAd, new { @class = "form-control"})
    <br />
    <button class="btn btn-info " id="Btn1">Kaydet</button>
    <script>
        $('#Btn1').click(function () {
            alert("Kategori başarılı bir şekilde eklendi")
        });
    </script>
   

</form>
